@model Instagram_MVC.Models.PostModel

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}
@if (ViewBag.Failure != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Failure
    </div>
}
